{
    "$schema": "https://json.schemastore.org/prettierrc",
    "overrides": [
        { "files": ".nvmrc", "options": { "parser": "yaml" } },
        {
            "files": [".*", "*.json"],
            "options": {
                "singleQuote": false
            }
        }
    ],
    "plugins": ["prettier-plugin-curly", "prettier-plugin-packagejson"],
    "useTabs": false,
    "tabWidth": 4,
    "singleQuote": true,
    "endOfLine": "auto"
}
